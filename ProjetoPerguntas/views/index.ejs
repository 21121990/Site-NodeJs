<%- include ('./partial/header.ejs') %>
<body>
    <%- include ('./partial/navbar.ejs') %>
      
    <div class="container">
        <hr>
        <h1>Perguntas</h1>        
        <a href="/pergunta">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                    <div class="card-body">
                        <h3><%= pergunta.titulo %> </h3>
                    </div>
                    <div class="card-footer">
                     <a href="/pergunta_id/<%= pergunta.id%>"> <button class="btn btn-dark">Responder</button></a> 
                    </div>
            </div>
         <%})%>
    </div>
</body>
